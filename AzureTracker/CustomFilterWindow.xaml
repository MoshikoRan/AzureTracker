<Window x:Class="AzureTracker.CustomFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzureTracker"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        Title="Azure Tracker" Height="180" Width="400">
    <Grid Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <StackPanel>
            <Label FontSize="16">Type Custom Filter Name:</Label>
            <Separator Background="Transparent" Foreground="Transparent"/>
            <TextBox x:Name="txtFilterName" FontSize="16" Text="{Binding CustomFilterName}"></TextBox>
            <Separator Background="Transparent" Foreground="Transparent"/>
            <Button Content="OK" Click="Button_Click" Width="100" Height="30" />
        </StackPanel>
    </Grid>
</Window>
